<!DOCTYPE html>
<html>
  <head>
    <title>ほびスポ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if hobbyspot_user_signed_in? %>
      <%= render"shared/user" %>
    <% else %>
      <%= render"shared/guest" %>
    <% end %>
    </header>
    <%= yield %>
  </body>
</html>
