<div class="form">
  <h1>投稿ページ</h1>
  <%= form_with url: '/hobbyspot/posts' do |f| %>
    <%= f.hidden_field :user_id, value: "#{current_hobbyspot_user.id}" %>
    <%= f.hidden_field :user_name, value: "#{@user.name}" %>
    <div class="rich-form">
      <%= f.label :body, "内容" %>
      <%= f.rich_text_area :body %>
    </div>
    <div>
      <%= f.submit '投稿' %>
    </div>
    <% end %>
</div>

